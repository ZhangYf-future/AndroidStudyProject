<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".animation.property.BasicActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <include
                android:id="@+id/title"
                layout="@layout/layout_title"
                app:title="@{@string/property_animation_basic}"
                />

        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <Button
                        android:id="@+id/btn_value_animator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ButtonStyle"
                        android:onClick="doClick"
                        android:textAllCaps="false"
                        android:text="@string/use_value_animator"
                        />

                <Button
                        android:id="@+id/btn_value_animator_of_object"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ButtonStyle"
                        android:onClick="doClick"
                        android:textAllCaps="false"
                        android:text="@string/use_value_animator_of_object"
                        />

                <Button
                        android:id="@+id/btn_use_value_animator_to_Margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ButtonStyle"
                        android:text="@string/use_value_animator_to_margin"
                        android:textAllCaps="false"
                        android:onClick="doClick"
                        />

                <Button
                        android:id="@+id/btn_use_object_animator_to_move"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ButtonStyle"
                        android:text="@string/use_object_animator_to_move"
                        android:textAllCaps="false"
                        android:onClick="doClick"
                        />

                <Button
                        android:id="@+id/btn_use_animator_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ButtonStyle"
                        android:text="@string/use_animator_set"
                        android:textAllCaps="false"
                        android:onClick="doClick"
                        />

                <Button
                        android:id="@+id/btn_add_animator_to_view_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ButtonStyle"
                        android:text="@string/add_animator_to_view_group"
                        android:textAllCaps="false"
                        android:onClick="doClick"
                        />

                <LinearLayout
                        android:id="@+id/test_view_grouo_animator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        />


            </LinearLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>