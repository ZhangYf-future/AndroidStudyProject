<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.test_text.TestTextActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <include
                android:id="@+id/layout_title"
                layout="@layout/layout_title"
                app:title="@{@string/draw_text_study}" />

        <ScrollView
                style="@style/match_parent_constrain"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_title">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/match_parent">

                <!--测试画笔样式对绘制的文本的影响-->
                <com.project.mystudyproject.view.test_text.TestTextView1
                        android:id="@+id/test_text_view_1"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <com.project.mystudyproject.view.test_text.TestTextView2
                        android:id="@+id/test_text_view_2"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:paddingTop="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/test_text_view_1" />

                <com.project.mystudyproject.view.test_text.TestTextView3
                        android:id="@+id/test_text_view_3"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/test_text_view_2" />

                <com.project.mystudyproject.view.test_text.TestTextView4
                        android:id="@+id/test_text_view_4"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/test_text_view_3" />

                <com.project.mystudyproject.view.test_text.TestTextView5
                        android:id="@+id/test_text_view_5"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/test_text_view_4" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>