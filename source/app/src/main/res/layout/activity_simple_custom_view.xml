<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.cutom_view.SimpleCustomViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/match_parent">

        <include
                android:id="@+id/layout_title"
                layout="@layout/layout_title"
                app:title="@{@string/simple_custom_view}" />


        <ScrollView
                style="@style/match_parent_constrain"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_title">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/match_parent">

                <com.project.mystudyproject.view.cutom_view.CustomView1
                        android:id="@+id/custom_view_1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <com.project.mystudyproject.view.cutom_view.CustomView2
                        android:id="@+id/custom_view_2"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_1" />

                <com.project.mystudyproject.view.cutom_view.CustomView3
                        android:id="@+id/custom_view_3"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_2" />

                <com.project.mystudyproject.view.cutom_view.CustomView4
                        android:id="@+id/custom_view_4"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_3" />

                <com.project.mystudyproject.view.cutom_view.CustomView5
                        android:id="@+id/custom_view_5"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_4" />

                <com.project.mystudyproject.view.cutom_view.CustomView6
                        android:id="@+id/custom_view_6"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_5" />

                <com.project.mystudyproject.view.cutom_view.CustomView7
                        android:id="@+id/custom_view_7"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_6" />

                <com.project.mystudyproject.view.cutom_view.CustomView8
                        android:id="@+id/custom_view_8"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_7" />

                <com.project.mystudyproject.view.cutom_view.CustomView9
                        android:id="@+id/custom_view_9"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_8" />

                <com.project.mystudyproject.view.cutom_view.CustomView10
                        android:id="@+id/custom_view_10"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_9" />

                <com.project.mystudyproject.view.cutom_view.CustomView11
                        android:id="@+id/custom_view_11"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_10" />

                <com.project.mystudyproject.view.cutom_view.CustomView12
                        android:id="@+id/custon_view_12"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/custom_view_11" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>