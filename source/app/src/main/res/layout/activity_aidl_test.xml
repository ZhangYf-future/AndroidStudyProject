<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".service.aidl.AidlTestActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/match_parent"
        android:background="@color/color_white">

        <include
            android:id="@+id/layout_title"
            layout="@layout/layout_title"
            app:title="@{@string/aidl_study}" />

        <Button
            android:id="@+id/btn_connect_service"
            style="@style/ButtonStyleConstrain"
            android:onClick="doClick"
            android:text="@string/connect_service"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_title" />

        <Button
            android:id="@+id/btn_get_all_books"
            style="@style/ButtonStyleConstrain"
            android:onClick="doClick"
            android:text="@string/get_all_books"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_connect_service" />

        <Button
            android:id="@+id/btn_add_book"
            style="@style/ButtonStyleConstrain"
            android:onClick="doClick"
            android:text="@string/add_book"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_get_all_books" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>