<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.test_rect.TestRectActivity">

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/match_parent">

        <include
                android:id="@+id/layout_title"
                layout="@layout/layout_title"
                app:title="@{@string/rect_study}" />

        <ScrollView
                style="@style/match_parent_constrain"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_title">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/match_parent">

                <com.project.mystudyproject.view.test_rect.TestRectView1
                        android:id="@+id/test_rect_view_1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <com.project.mystudyproject.view.test_rect.TestRectView2
                        android:id="@+id/test_rect_view_2"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/test_rect_view_1" />

                <com.project.mystudyproject.view.test_rect.TestRectView3
                        android:id="@+id/test_rect_view_3"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/test_rect_view_2" />

                <com.project.mystudyproject.view.test_rect.TestRectView4
                        android:id="@+id/test_rect_view_4"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/test_rect_view_3" />

                <com.project.mystudyproject.view.test_rect.TestRectView5
                        android:id="@+id/test_rect_view_5"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/test_rect_view_4"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="20dp"
                        />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>