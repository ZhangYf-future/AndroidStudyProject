<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".service.ServiceHomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/match_parent"
            android:background="@color/color_white">

        <include
                android:id="@+id/layout_title"
                layout="@layout/layout_title"
                app:title="@{@string/service_study_home}" />

        <Button
                android:id="@+id/btn_test_service_lifecycle"
                style="@style/ButtonStyle"
                android:onClick="doClick"
                android:text="@string/service_lifecycle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_title" />

        <Button
            android:id="@+id/btn_intent_service_study"
            style="@style/ButtonStyleConstrain"
            android:onClick="doClick"
            android:text="@string/intent_service_study"
            app:layout_constraintTop_toBottomOf="@id/btn_test_service_lifecycle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Button
            style="@style/ButtonStyleConstrain"
            app:layout_constraintTop_toBottomOf="@id/btn_intent_service_study"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/aidl_study"
            android:onClick="doClick"
            android:id="@+id/btn_aidl_study"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>